/* 轮播器样式 */
/* 轮播器 */
swiper{
  width:750rpx;
  height: 470rpx;
}

swiper image{
  width:750rpx;
}



/* 商品基本信息 */
.detail .detail-info{
  /* border-top: solid 8rpx gray; */
  padding: 20rpx;
  border-bottom: solid 8rpx #e7e2e2;
}

.detail .detail-info .price{
  color: red;
  padding: 10rpx;
}
 
.detail .detail-info .name{
  padding: 10rpx;
}

/* 图文详情 */

.detail .goods-detail .title{
  color: red;
  padding: 20rpx;
}

/* 底部菜单 */
.detail .detail-tool{
  position: fixed;
  width: 100%;
  display: flex;
  background-color: white;
  left: 0;
  bottom: 0;
}

.detail .detail-tool .item{
  flex: 1;
  display: flex;
  align-items: center;
  text-align: center;
}

.detail .detail-tool .item .menu{
  flex: 1;
}

.detail .detail-tool .item .menu icon{
  font-size: 10px;
}

.detail .detail-tool .item .menu view{
  font-size: 10px;
}

.detail .detail-tool .item .menu .cart{
  background-color: #c07878;
  font-size: 16px;
  height: 84rpx;
  line-height: 84rpx;
}

.detail .detail-tool .item .menu .buy{
  background-color: #7677cc;
  font-size: 16px;
  height: 84rpx;
  line-height: 84rpx;
}