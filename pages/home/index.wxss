/* 轮播器样式 */
swiper image{
  width: 100%;
  height: 100%;
}

/* 菜单样式 */
.menu{
  display: flex;
  flex-direction: row;
}
.menu .menu-item{
  flex: 1;
}
.menu .menu-item image{
  width: 100%;
  height: 180rpx;
}

/* 楼层样式 */
.floor .floor-item {
  margin-top: 5rpx;
}
.floor .floor-item .floor-item-title image{
  height: 80rpx;
}
.floor .floor-item .floor-item-content{
  overflow: hidden;
  padding: 10rpx;
}
.floor .floor-item .floor-item-content navigator{
  float: left;
  width: 32.33%;
  height: 193rpx;
}
.floor .floor-item .floor-item-content navigator image{
  width: 100%;
  height: 100%;
}
/* 定位处理第一张图片 */
.floor .floor-item .floor-item-content navigator:nth-child(1){
  height: 386rpx;
}
/* 图片边距处理 */
.floor .floor-item .floor-item-content navigator:nth-last-child(-n + 4){
  border-left: 10rpx solid white;
}
.floor .floor-item .floor-item-content navigator:nth-last-child(-n + 2){
  border-left: 10rpx solid white;
}